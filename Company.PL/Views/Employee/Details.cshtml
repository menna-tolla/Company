
@model Employee

@{
    ViewData["Title"] = "Details";
}


<h1>Details Page</h1>

<br />
<br />



<div>

    <div class="my-3">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" readonly />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Age" class="col-form-label">Age</label>
        <input type="text" asp-for="Age" class="form-control" readonly />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Salary" class="col-form-label">Salary</label>
        <input type="text" asp-for="Salary" class="form-control" readonly />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Address" class="col-form-label">Address</label>
        <input type="text" asp-for="Address" class="form-control" readonly />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Email" class="col-form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>

    <div class="my-3">
        <label asp-for="Phone" class="col-form-label">Phone</label>
        <input type="text" asp-for="Phone" class="form-control" readonly />
        <span asp-validation-for="Phone" class="text-danger"></span>

    </div>

    <div class="my-3">
        <label asp-for="IsActive" class="col-form-label">IsActive</label>
        <input type="checkbox" asp-for="IsActive" class="" readonly />
        <span asp-validation-for="IsActive" class="text-danger"></span>

    </div>

    <div class="my-3">
        <label asp-for="IsDeleted" class="col-form-label">IsDeleted</label>
        <input type="checkbox" asp-for="IsDeleted" class="" readonly />
        <span asp-validation-for="IsDeleted" class="text-danger"></span>

    </div>

    <div class="my-3">
        <label asp-for="HiringDate" class="col-form-label">HiringDate</label>
        <input asp-for="HiringDate" class="form-control" readonly />
        <span asp-validation-for="HiringDate" class="text-danger"></span>

    </div>

    <div class="my-3">

        <label asp-for="CreateAt" class="col-form-label">Created At</label>
        <input asp-for="CreateAt" class="form-control" readonly />
        <span asp-validation-for="CreateAt" class="text-danger"></span>



        <div class="my-5">
            @* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"> Edit </a> *@
            <a asp-action="Index" class="btn btn-light">Back To List </a>
        </div>
</div>

   